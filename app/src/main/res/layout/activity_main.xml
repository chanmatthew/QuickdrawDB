<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.quickdraw.database.quickdrawdb.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_above="@+id/enterButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:id="@+id/balanceInput"
        android:hint="Balance" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_above="@+id/balanceInput"
        android:layout_alignEnd="@+id/balanceInput"
        android:layout_marginBottom="26dp"
        android:id="@+id/nameInput"
        android:hint="Name" />

    <Button
        android:text="Enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Get Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataButton"
        android:layout_above="@+id/nameInput"
        android:layout_alignStart="@+id/enterButton"
        android:layout_marginBottom="11dp" />

    <TextView
        android:text="Balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textbox"
        android:layout_above="@+id/dataButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameInput2"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nameInput"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/namebox"
        android:layout_below="@+id/nameInput2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/namebox"
        android:layout_alignStart="@+id/nameInput2"
        android:id="@+id/amountInput"
        android:hint="Amount" />

    <Button
        android:text="Withdraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wButton"
        android:layout_below="@+id/amountInput"
        android:layout_toStartOf="@+id/dataButton" />

    <Button
        android:text="Deposit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wButton"
        android:layout_alignStart="@+id/namebox"
        android:id="@+id/dButton" />
</RelativeLayout>
